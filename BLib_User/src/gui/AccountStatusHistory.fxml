<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.AccountStatusHistoryController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #1F4044;"
      prefWidth="960" 
      prefHeight="720">

    <!-- Top Section with Back Button -->
    <BorderPane>
        <left>
            <Button fx:id="btnGoBack" 
                    text="â†" 
                    onAction="#goBack"
                    style="-fx-background-color: #e4b970; 
                           -fx-text-fill: #355457; 
                           -fx-font-size: 24;
                           -fx-min-width: 50; 
                           -fx-min-height: 50; 
                           -fx-background-radius: 20;">
                <BorderPane.margin>
                    <Insets top="20" left="20" bottom="20"/>
                </BorderPane.margin>
            </Button>
        </left>
    </BorderPane>

    <!-- Main Content Container -->
    <VBox alignment="CENTER" 
          spacing="25" 
          style="-fx-padding: 30;">

        <!-- Status History Container -->
        <VBox spacing="20" 
              style="-fx-background-color: #2A565B; 
                     -fx-padding: 40; 
                     -fx-background-radius: 15; 
                     -fx-min-width: 800; 
                     -fx-max-width: 800;">
            
            <!-- Title -->
            <Label text="Account Status History" 
                   style="-fx-font-size: 32; 
                          -fx-text-fill: white; 
                          -fx-font-weight: bold;"/>

            <!-- Table -->
            <TableView fx:id="tableView" 
                      style="-fx-background-color: #1F4044; 
                             -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="userStatusColumn" 
                                prefWidth="266" 
                                text="User Status"
                                style="-fx-alignment: CENTER-LEFT;"/>
                    <TableColumn fx:id="fromDateColumn" 
                                prefWidth="266" 
                                text="From Date"
                                style="-fx-alignment: CENTER-LEFT;"/>
                    <TableColumn fx:id="untilDateColumn" 
                                prefWidth="266" 
                                text="Until Date"
                                style="-fx-alignment: CENTER-LEFT;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</VBox>