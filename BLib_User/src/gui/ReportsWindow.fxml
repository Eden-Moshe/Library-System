<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600" prefWidth="462.0" style="-fx-background-color: #355457;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ReportsWindow">
    
    <!-- Back Button -->
    <Button fx:id="btnBack" layoutX="10" layoutY="10" style="-fx-text-fill: #f6c177; -fx-font-size: 48px; -fx-background-color: transparent;" text="←" onAction="#getBackBtn" />
    
    <!-- Headline with Icon -->
    <HBox layoutX="120" layoutY="50" spacing="10" />
    
    <!-- Buttons -->
    <Button fx:id="btnMonthlyStatus" layoutX="108.0" layoutY="168.0" style="-fx-font-size: 14px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-background-radius: 25; -fx-padding: 10 40; -fx-font-weight: bold;" text="Monthly Status Report" onAction="#handleMonthlyStatusReport" />
    
    <Button fx:id="btnMonthlyBorrowTimes" layoutX="83.0" layoutY="326.0" style="-fx-font-size: 14px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-background-radius: 25; -fx-padding: 10 40; -fx-font-weight: bold;" text="Monthly Borrow Times Report" onAction="#handleMonthlyBorrowTimesReport" />
    
    <!-- Headline -->
    <Label layoutX="190.0" layoutY="46.0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Reports" />
    <Label layoutX="160.0" layoutY="49.0" style="-fx-font-size: 20px; -fx-text-fill: white;" text="📊" />
    
</AnchorPane>
