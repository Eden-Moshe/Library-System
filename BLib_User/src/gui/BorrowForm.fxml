<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300" fx:controller="gui.BorrowWindowController">
    <Label text="Book Barcode:"/>
    <TextField fx:id="txtBookBarcode" promptText="Enter book barcode"/>

    <Label text="Borrower ID:"/>
    <TextField fx:id="txtBorrowerId" promptText="Enter borrower ID"/>

    <Label text="Borrow Date:"/>
    <TextField fx:id="txtBorrowDate" promptText="Enter borrow date (YYYY-MM-DD)"/>

    <Label text="Return Date:"/>
    <TextField fx:id="txtReturnDate" promptText="Enter return date (YYYY-MM-DD)"/>

    <Button text="Borrow" fx:id="btnBorrow" onAction="#sendBorrowRequest"/>
    <Button text="Exit" fx:id="btnExit" onAction="#getExitBtn"/>
    <Button text="Reset" fx:id="btnReset" onAction="#resetFields"/>
    
    <TextField fx:id="txtResponse" editable="false" promptText="Response will appear here"/>
</VBox>