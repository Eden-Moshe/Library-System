<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #355457;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    
    <!-- Gold Line at the Top -->
    <Rectangle fill="#f6c177" height="30" layoutX="0" layoutY="0" width="600" />
    
    <!-- Back Button (Arrow at Top Left) -->
    <HBox alignment="TOP_LEFT" style="-fx-padding-top: 10;" />
    
    <!-- Title with Icon -->
    <HBox alignment="CENTER_LEFT" layoutX="24.0" layoutY="200.0" spacing="10">
        <Label prefHeight="33.0" prefWidth="26.0" style="-fx-font-size: 18px; -fx-text-fill:  white;" text="🔍" />
        <Label prefHeight="32.0" prefWidth="126.0" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Enter User ID :" />
    </HBox>
    
    <!-- Text Field with Prompt Text -->
    <TextField fx:id="userIdField" layoutX="179.0" layoutY="196.0" prefHeight="41.0" prefWidth="214.0" promptText="Enter ID to view User Info" />

    <!-- Smaller View User Info Button -->
    <Button fx:id="btnViewUserInfo" layoutX="416.0" layoutY="196.0" onAction="#ViewUserInfo" style="-fx-font-size: 14px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-background-radius: 25; -fx-padding: 10 30; -fx-font-weight: bold;" text="View User Info" />
    <Button fx:id="btnReset" layoutX="238.0" layoutY="326.0" onAction="#resetFields" style="-fx-font-size: 14px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-border-width: 0; -fx-background-radius: 25; -fx-padding: 10 30; -fx-font-weight: bold;" text="Reset" />

    <!-- Back Button -->
    <Button fx:id="btnBack" layoutX="14.0" layoutY="23.0" onAction="#getBackBtn" style="-fx-font-size: 36px; -fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-border-width: 0;" text="←" />
    
</AnchorPane>
