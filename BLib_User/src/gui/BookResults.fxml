<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="708.0" prefWidth="1024.0" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.BookResultsController" stylesheets="@Results.css">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <!-- טבלה עם עיצוב CSS מותאם -->
        <TableView fx:id="tblResults" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colBookName" prefWidth="150" text="Book Name" />
                <TableColumn fx:id="colBookGenre" prefWidth="100" text="Genre" />
                <TableColumn fx:id="colBookDesc" prefWidth="300" text="Description" />
                <TableColumn fx:id="colBookExists" prefWidth="80" text="Available" />
                <TableColumn fx:id="colPlaceOnShelf" prefWidth="100" text="Location" />
                <TableColumn fx:id="colReturnDate" prefWidth="150" text="Return Date" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- כפתור חזור עם עיצוב מותאם -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Button onAction="#handleBackAction" text="←" styleClass="button" />
            </children>
        </HBox>
    </children>
</VBox>
