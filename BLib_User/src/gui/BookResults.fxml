<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="720.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.BookResultsController">
    
    <top>
        <Button onAction="#handleBackAction" styleClass="nav-button" text="←">
            <BorderPane.margin>
                <Insets bottom="20" left="20" top="20" />
            </BorderPane.margin>
        </Button>
    </top>
    
    <center>
        <TableView fx:id="tblResults" styleClass="modern-table">
            <columns>
                <TableColumn fx:id="colBookName" prefWidth="200" text="Book Name" />
            <TableColumn fx:id="colBookBarcode" prefWidth="200" text="Barcode" />
                <TableColumn fx:id="colBookGenre" prefWidth="120" text="Genre" />
                <TableColumn fx:id="colBookDesc" prefWidth="300" text="Description" />
                <TableColumn fx:id="colBookExists" prefWidth="80" text="Available" />
                <TableColumn fx:id="colPlaceOnShelf" prefWidth="100" text="Location" />
                <TableColumn fx:id="colReturnDate" prefWidth="150" text="Return Date" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="20" left="20" right="20" />
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>
