<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.OrderWindowController"
      spacing="20" alignment="CENTER" prefWidth="580" prefHeight="580"
      style="-fx-background-color: #355457; -fx-padding: 35;">

    <!-- Back Button (Arrow at Top Left) -->
    <HBox alignment="TOP_LEFT" style="-fx-padding-top: 10;">
        <Button text="←" fx:id="btnBack" onAction="#handleBackAction"
                style="-fx-font-size: 36px; -fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-border-width: 0;"/>
    </HBox>

    <!-- Title with Icon (Centered at the Top) -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding-top: 10;">
        <Label text="📚" style="-fx-font-size: 32px; -fx-text-fill: #d9a762;"/>
        <Label text="Book Order" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <!-- Book Details Section -->
    <VBox spacing="15" alignment="CENTER" style="-fx-pref-width: 400px;">
        <Label text="📖 Book Details:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Text fx:id="bookNameText" style="-fx-font-size: 14px; -fx-fill: white;" text="Book Name: "/>
        <Text fx:id="returnDateText" style="-fx-font-size: 14px; -fx-fill: white;" text="Expected Return Date: "/>
        <Text fx:id="statusMessage" style="-fx-font-size: 14px; -fx-fill: green;" text=""/>
    </VBox>

    <!-- Buttons Section -->
    <HBox spacing="20" alignment="CENTER" style="-fx-padding-top: 20;">
        <Button text="Order Book" fx:id="btnOrder" onAction="#handleOrderAction"
                style="-fx-font-size: 16px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-background-radius: 35; -fx-padding: 14 50; -fx-font-weight: bold;"/>
    </HBox>
</VBox>