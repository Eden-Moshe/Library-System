<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.OrderWindowController"
      alignment="CENTER"
      style="-fx-background-color: #1F4044;"
      prefWidth="960" 
      prefHeight="720">

    <!-- Top Section with Back Button -->
    <BorderPane>
        <left>
            <Button fx:id="btnBack" 
                    text="â†" 
                    onAction="#handleBackAction"
                    style="-fx-background-color: #e4b970; 
                           -fx-text-fill: #355457; 
                           -fx-font-size: 24;
                           -fx-min-width: 50; 
                           -fx-min-height: 50; 
                           -fx-background-radius: 20;">
                <BorderPane.margin>
                    <Insets top="20" left="20" bottom="20"/>
                </BorderPane.margin>
            </Button>
        </left>
    </BorderPane>

    <!-- Main Content Container -->
    <VBox alignment="CENTER" 
          spacing="25" 
          style="-fx-padding: 30;">

        <!-- Order Form Container -->
        <VBox spacing="20" 
              style="-fx-background-color: #2A565B; 
                     -fx-padding: 40; 
                     -fx-background-radius: 15; 
                     -fx-min-width: 500; 
                     -fx-max-width: 500;">

            <!-- Title -->
            <Label text="Book Order" 
                   style="-fx-font-size: 32; 
                          -fx-text-fill: white; 
                          -fx-font-weight: bold;"/>

            <!-- Book Details Section -->
            <VBox spacing="15">
                <Label text="Book Details" 
                       style="-fx-font-size: 16; 
                              -fx-text-fill: #E4E4E4;"/>
                <Text fx:id="bookNameText" 
                      style="-fx-fill: white; 
                             -fx-font-size: 16;" 
                      text="Book Name: "/>
                <Text fx:id="returnDateText" 
                      style="-fx-fill: white; 
                             -fx-font-size: 16;" 
                      text="Expected Return Date: "/>
                <Text fx:id="statusMessage" 
                      style="-fx-fill: #e4b970; 
                             -fx-font-size: 16;"/>
            </VBox>

            <!-- Order Button -->
            <HBox alignment="CENTER" 
                  spacing="20">
                <Button fx:id="btnOrder" 
                        text="Order Book" 
                        onAction="#handleOrderAction"
                        style="-fx-font-size: 16; 
                               -fx-padding: 15 30; 
                               -fx-min-width: 120;"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>