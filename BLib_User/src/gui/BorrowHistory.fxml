<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="gui.BorrowHistoryController"
    alignment="CENTER"
    spacing="10"
    style="-fx-background-color: #1F4044;"
    prefWidth="960" 
    prefHeight="720">

    <!-- Header section with back button and title -->
    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 0 20;">
            <Button fx:id="handleBack" onAction="#goBack" 
                style="-fx-font-size: 24; -fx-background-color: transparent; -fx-text-fill: white;"
                text="←"/>
        </HBox>
        <Label text="Subscriber's Borrow History" 
            style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </VBox>

    <!-- Main content container -->
    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
        <!-- Table container with styling -->
        <VBox style="-fx-background-color: #2A565B; -fx-padding: 20; -fx-background-radius: 15;">
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS"
                style="-fx-min-height: 400; -fx-pref-width: 750;">
                <columns>
                    <TableColumn fx:id="bookNameColumn" text="Book Name" 
                        style="-fx-pref-width: 250;"/>
                    <TableColumn fx:id="bookBorrowDateColumn" text="Borrow Date"
                        style="-fx-pref-width: 250;"/>
                    <TableColumn fx:id="bookReturnDateColumn" text="Return Date"
                        style="-fx-pref-width: 250;"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Button section -->
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0;">
            <Button fx:id="btnExtensions" text="View Borrow Extensions" 
                onAction="#viewExtensions"
                style="-fx-font-size: 14; -fx-padding: 12 25; -fx-min-width: 200;"/>
        </HBox>
    </VBox>
</VBox>