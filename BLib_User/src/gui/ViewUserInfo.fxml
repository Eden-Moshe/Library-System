<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="572.0" prefWidth="778.0" style="-fx-background-color: #355457;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewUserInfoWindow">
    
    <!-- Back Button (Arrow at Top Left) -->
    <Button fx:id="btnBack" layoutX="14.0" layoutY="23.0" onAction="#getBackBtn" style="-fx-font-size: 36px; -fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-border-width: 0;" text="←" />
    
    <!-- Text Fields Section -->
    <VBox alignment="CENTER" layoutX="398.0" layoutY="98.0" spacing="15">
        
        <!-- User ID -->
        <HBox spacing="10">
            <Label prefHeight="9.0" prefWidth="20.0" style="-fx-font-size: 20px; -fx-text-fill: white;" text="👤" />
            <VBox spacing="5">
                <Label style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;" text="User ID:" />
                <TextField fx:id="idResponse" prefWidth="250" promptText="Enter User ID" style="-fx-border-color: transparent; -fx-background-color: white; -fx-font-size: 14px; -fx-border-radius: 25; -fx-padding: 10;" />
            </VBox>
        </HBox>

        <!-- User Password -->
        <HBox spacing="10">
            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="🔒" />
            <VBox spacing="5">
                <Label style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;" text="Password:" />
                <TextField fx:id="passResponse" prefWidth="250" promptText="**********" style="-fx-border-color: transparent; -fx-background-color: white; -fx-font-size: 14px; -fx-border-radius: 25; -fx-padding: 10;" />
            </VBox>
        </HBox>

        <!-- Phone Number -->
        <HBox spacing="10">
            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="📞" />
            <VBox spacing="5">
                <Label style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;" text="Phone Number:" />
                <TextField fx:id="phoneResponse" prefWidth="250" promptText="Enter Phone Number" style="-fx-border-color: transparent; -fx-background-color: white; -fx-font-size: 14px; -fx-border-radius: 25; -fx-padding: 10;" />
            </VBox>
        </HBox>

        <!-- Email -->
        <HBox spacing="10">
            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="📧" />
            <VBox spacing="5">
                <Label style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;" text="Email:" />
                <TextField fx:id="mailResponse" prefWidth="250" promptText="Enter Email" style="-fx-border-color: transparent; -fx-background-color: white; -fx-font-size: 14px; -fx-border-radius: 25; -fx-padding: 10;" />
            </VBox>
        </HBox>

        <!-- Status -->
        <HBox spacing="10">
            <Label style="-fx-font-size: 20px; -fx-text-fill: white;" text="🛠" />
            <VBox spacing="5">
                <Label style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;" text="Status:" />
                <TextField fx:id="statusResponse" prefWidth="250" promptText="Enter Status" style="-fx-border-color: transparent; -fx-background-color: white; -fx-font-size: 14px; -fx-border-radius: 25; -fx-padding: 10;" />
            </VBox>
        </HBox>

    </VBox>

    <!-- Buttons Section -->
    <VBox alignment="CENTER" layoutY="370" spacing="15" />
     <Button fx:id="btnExtendBorrow" layoutX="90.0" layoutY="187.0" onAction="#extendBorrow" style="-fx-font-size: 14px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-background-radius: 25; -fx-padding: 10 40; -fx-font-weight: bold;" text="Extend Borrow" />
     <Button fx:id="btnViewAccountStatusHistory" layoutX="75.0" layoutY="266.0" onAction="#viewAccountStatusHistory" style="-fx-font-size: 14px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-background-radius: 25; -fx-padding: 10 40; -fx-font-weight: bold;" text="View Status History" />
     <Button fx:id="btnViewBorrowHistory" layoutX="71.0" layoutY="350.0" onAction="#viewBorrowHistory" style="-fx-font-size: 14px; -fx-background-color: #f6c177; -fx-text-fill: black; -fx-background-radius: 25; -fx-padding: 10 40; -fx-font-weight: bold;" text="View Borrow History" />
    
</AnchorPane>
