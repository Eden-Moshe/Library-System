<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300" fx:controller="gui.RequestWindowController">
    <Label text="Book Barcode:"/>
    <TextField fx:id="txtBookBarcode" promptText="Enter book barcode"/>

    <Label text="Borrower ID:"/>
    <TextField fx:id="txtBorrowerId" promptText="Enter borrower ID"/>

    <Label text="Request Date:"/>
    <TextField fx:id="txtRequestDate" promptText="Enter request date (YYYY-MM-DD)"/>

    <Button text="Request Extension" fx:id="btnRequestExtension" onAction="#sendExtensionRequest"/>
    <Button text="Exit" fx:id="btnExit" onAction="#getExitBtn"/>
    <Button text="Reset" fx:id="btnReset" onAction="#resetFields"/>
    
    <TextField fx:id="txtResponse" editable="false" promptText="Response will appear here"/>
</VBox>
