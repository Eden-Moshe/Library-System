<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="gui.LibrarianMenuController"
      prefWidth="960" prefHeight="720"
      style="-fx-background-color: #1F4044;">
      
    <!-- Main Content Container -->
    <VBox spacing="20" style="-fx-padding: 30;">
        <!-- Top Bar with Back and Message buttons -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Button fx:id="handleBack" onAction="#goBack" 
                    style="-fx-background-color: transparent; -fx-text-fill: #F6C177; 
                           -fx-font-size: 24; -fx-padding: 10 20;">‚Üê</Button>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnMessage" onAction="#ViewMessageInbox" 
                    style="-fx-background-color: #F6C177; -fx-text-fill: #1F4044;
                           -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 8;"
                    text="Messages"/>
        </HBox>

        <!-- Content Section -->
        <HBox alignment="CENTER" spacing="50" VBox.vgrow="ALWAYS">
            <!-- Left Side - Buttons -->
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <Button fx:id="btnUserInfo" onAction="#btnUserInfo" 
                        style="-fx-background-color: #F6C177; -fx-text-fill: #1F4044;
                               -fx-padding: 15 30; -fx-background-radius: 8; -fx-font-size: 14;
                               -fx-pref-width: 250;" 
                        text="View User Info"/>
                <Button fx:id="btnCreateSubscriber" onAction="#createSubscriber" 
                        style="-fx-background-color: #F6C177; -fx-text-fill: #1F4044;
                               -fx-padding: 15 30; -fx-background-radius: 8; -fx-font-size: 14;
                               -fx-pref-width: 250;" 
                        text="Create New Subscriber"/>
                <Button fx:id="btnLendBook" onAction="#btnLendBook" 
                        style="-fx-background-color: #F6C177; -fx-text-fill: #1F4044;
                               -fx-padding: 15 30; -fx-background-radius: 8; -fx-font-size: 14;
                               -fx-pref-width: 250;" 
                        text="Lend Book"/>
                <Button fx:id="btnReturnBook" onAction="#btnReturnBook" 
                        style="-fx-background-color: #F6C177; -fx-text-fill: #1F4044;
                               -fx-padding: 15 30; -fx-background-radius: 8; -fx-font-size: 14;
                               -fx-pref-width: 250;" 
                        text="Return Book"/>
                <Button fx:id="btnSearchBook" onAction="#btnSearchBook" 
                        style="-fx-background-color: #F6C177; -fx-text-fill: #1F4044;
                               -fx-padding: 15 30; -fx-background-radius: 8; -fx-font-size: 14;
                               -fx-pref-width: 250;" 
                        text="Search Book"/>
                <Button fx:id="btnViewReports" onAction="#btnViewReports" 
                        style="-fx-background-color: #F6C177; -fx-text-fill: #1F4044;
                               -fx-padding: 15 30; -fx-background-radius: 8; -fx-font-size: 14;
                               -fx-pref-width: 250;" 
                        text="View Reports"/>
            </VBox>

            <!-- Right Side - Logo -->
            <VBox alignment="CENTER">
                <ImageView fx:id="logo" fitHeight="300" fitWidth="300" preserveRatio="true">
                    <image>
                        <Image url="@/gui/images/BLIB.png"/>
                    </image>
                </ImageView>
            </VBox>
        </HBox>
    </VBox>
</VBox>