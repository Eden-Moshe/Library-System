<VBox alignment="CENTER" prefHeight="580.0" prefWidth="580.0" spacing="20" style="-fx-background-color: #355457; -fx-padding: 35;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.RequestWindowController">
      
	
    <!-- Back Button (Arrow at Top Left) -->
