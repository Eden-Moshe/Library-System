    <!-- Buttons Section -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="btnRequestExtension" onAction="#sendExtensionRequest" style="-fx-font-size: 16px; -fx-background-color: #f6c177; -fx-text-fill: black;                         -fx-background-radius: 35; -fx-padding: 14 50; -fx-font-weight: bold;" text="Request Extension" />
        <Button fx:id="btnReset" onAction="#resetFields" style="-fx-font-size: 16px; -fx-background-color: #f6c177; -fx-text-fill: black;                        -fx-border-width: 0; -fx-background-radius: 35; -fx-padding: 14 50; -fx-font-weight: bold;" text="Reset" />
