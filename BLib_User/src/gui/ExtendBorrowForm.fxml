    <!-- Response Box -->
    <TextField fx:id="txtResponse" editable="false" promptText="Response will appear here" style="-fx-background-color: white; -fx-border-color: transparent; -fx-border-radius: 25;                        -fx-padding: 10; -fx-font-size: 14px; -fx-pref-width: 250;" />
