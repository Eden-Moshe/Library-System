<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.RequestWindowController"
      spacing="20" alignment="CENTER" prefWidth="500" prefHeight="400"
      style="-fx-background-color: #f4f7fa; -fx-padding: 35;">

    <!-- Back Button (Arrow at Top Left) -->
    <HBox alignment="TOP_LEFT" style="-fx-padding-top: 10;">
        <Button text="←" fx:id="btnBack" onAction="#getBackBtn"
                style="-fx-font-size: 36px; -fx-background-color: transparent; -fx-text-fill: #4CAF50; -fx-font-family: 'Arial'; -fx-border-width: 0;"/>
    </HBox>

    <!-- Title with Icon (Centered at the Top) -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding-top: 10;">
        <Label text="📚" style="-fx-font-size: 32px; -fx-text-fill: #4CAF50;"/>
        <Label text="Request Book Extension" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    </HBox>

    <!-- Form for Requesting Book Extension -->
    <GridPane hgap="20" vgap="25" alignment="CENTER" style="-fx-pref-width: 400px;">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" minWidth="140"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Labels and Text Fields -->
        <Label text="📖 Book Barcode:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <TextField fx:id="txtBookBarcode" promptText="Enter book barcode" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   style="-fx-border-color: #4CAF50; -fx-border-radius: 12; -fx-padding: 10; -fx-background-color: #ffffff; -fx-font-size: 14px;" prefWidth="250"/>

        <Label text="🆔 Borrower ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <TextField fx:id="txtBorrowerId" promptText="Enter borrower ID" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   style="-fx-border-color: #4CAF50; -fx-border-radius: 12; -fx-padding: 10; -fx-background-color: #ffffff; -fx-font-size: 14px;" prefWidth="250"/>

        <Label text="📅 New Return Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <DatePicker fx:id="datePickerRequestDate" promptText="Select new return date" GridPane.rowIndex="2" GridPane.columnIndex="1"
                    style="-fx-border-color: #4CAF50; -fx-border-radius: 12; -fx-padding: 10; -fx-background-color: #ffffff; -fx-font-size: 14px;" prefWidth="250"/>
    </GridPane>

    <!-- Buttons Section (Modern and Refined) -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Request Extension" fx:id="btnRequestExtension" onAction="#sendExtensionRequest"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 25; -fx-padding: 12 30; -fx-font-weight: bold;"/>
        <Button text="Reset" fx:id="btnReset" onAction="#resetFields"
                style="-fx-font-size: 16px; -fx-background-color: transparent; -fx-text-fill: #4CAF50; -fx-border-color: #4CAF50; -fx-border-width: 2px; -fx-border-radius: 25; -fx-padding: 12 30; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Response Box for Result Display -->
    <TextField fx:id="txtResponse" editable="false" promptText="Response will appear here"
               style="-fx-background-color: #ffffff; -fx-border-color: #bbb; -fx-border-radius: 12; -fx-padding: 10; -fx-font-size: 14px; -fx-pref-width: 250;" />
</VBox>
