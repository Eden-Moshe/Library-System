        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Request Book Extension" />
    </HBox>

    <!-- Form for Requesting Book Extension -->
    <GridPane alignment="CENTER" hgap="20" style="-fx-pref-width: 400px;" vgap="25">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" minWidth="140" />
