<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="gui.BookReturnWindowController"
    alignment="CENTER"
    spacing="15"
    style="-fx-background-color: #1F4044;"
    prefWidth="960"
    prefHeight="720">

    <!-- Main content container with adjusted padding -->
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
        <!-- Back button -->
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 20 0; -fx-min-width: 500;">
            <Button fx:id="btnBack" text="←" onAction="#getBackBtn"
                style="-fx-font-size: 18; -fx-background-color: transparent; -fx-text-fill: white;"/>
        </HBox>

        <!-- Logo with adjusted size -->
        <ImageView fx:id="logo" fitHeight="120" fitWidth="120" preserveRatio="true">
            <image>
                <Image url="@/gui/images/BLIB.png"/>
            </image>
        </ImageView>

        <!-- Return form with adjusted width and padding -->
        <VBox spacing="15" style="-fx-background-color: #2A565B; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 450; -fx-max-width: 450;">
            <Label text="Book Return" style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <!-- Borrower ID field -->
            <VBox spacing="10">
                <Label text="Borrower ID" style="-fx-font-size: 14; -fx-text-fill: #E4E4E4;"/>
                <TextField fx:id="txtBorrowerId" promptText="Enter Borrower ID"
                    style="-fx-background-color: #1F4044; -fx-text-fill: white; -fx-prompt-text-fill: #858585;
                    -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14;"/>
            </VBox>

            <!-- Borrow Number field -->
            <VBox spacing="10">
                <Label text="Borrow Number" style="-fx-font-size: 14; -fx-text-fill: #E4E4E4;"/>
                <TextField fx:id="txtBorrowNumber" promptText="Enter Borrow Number"
                    style="-fx-background-color: #1F4044; -fx-text-fill: white; -fx-prompt-text-fill: #858585;
                    -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14;"/>
            </VBox>

            <!-- Book Barcode field -->
            <VBox spacing="10">
                <Label text="Book Barcode" style="-fx-font-size: 14; -fx-text-fill: #E4E4E4;"/>
                <TextField fx:id="txtbookBarcode" promptText="Enter Book Barcode"
                    style="-fx-background-color: #1F4044; -fx-text-fill: white; -fx-prompt-text-fill: #858585;
                    -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14;"/>
            </VBox>

            <!-- Response field -->
            <VBox spacing="10">
                <TextField fx:id="txtResponse" promptText="Response will appear here" editable="false"
                    style="-fx-background-color: #1F4044; -fx-text-fill: white; -fx-prompt-text-fill: #858585;
                    -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14;"/>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnreset" text="Reset" onAction="#resetFields"
                    style="-fx-font-size: 14; -fx-padding: 10 20; -fx-min-width: 100;"/>
                <Button fx:id="btnBookReturn" text="Return Book" onAction="#btnBookReturn"
                    style="-fx-font-size: 14; -fx-padding: 10 20; -fx-min-width: 100;"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>
