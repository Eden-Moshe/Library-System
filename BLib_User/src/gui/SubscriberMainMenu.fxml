<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="526.0" prefWidth="691.0" style="-fx-background-color: rgb(37, 75, 75); -fx-padding: 30;" stylesheets="@MainMenu.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainMenuController">
   <children>

       <!-- Back Button (Arrow at Top Left) -->
       <HBox alignment="TOP_LEFT" style="-fx-padding-top: 10;" />
   
       <!-- LOGO IMAGE -->
       <ImageView fx:id="logo" fitHeight="307.0" fitWidth="242.0" layoutX="399.0" layoutY="134.0" preserveRatio="true" style="-fx-background-color: lightgray;">
           <image>
               <Image url="@/gui/images/BLIB.png" />
           </image>
       </ImageView>

       <!-- USER INFO BUTTON -->
       <Button fx:id="btnUserInfo" layoutX="147.0" layoutY="123.0" onAction="#btnUserInfo" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e4b970; -fx-text-fill: rgb(37, 75, 75); -fx-font-family: 'Arial'; -fx-font-weight: normal;" text="User Info" />
   
       <!-- BORROW HISTORY BUTTON -->
       <Button fx:id="btnViewHistory" layoutX="147.0" layoutY="183.0" onAction="#btnViewHistory" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e4b970; -fx-text-fill: rgb(37, 75, 75); -fx-font-family: 'Arial'; -fx-font-weight: normal;" text="Borrow History" />
   
       <!-- SEARCH BOOK BUTTON -->
       <Button fx:id="btnSearchBook" layoutX="147.0" layoutY="243.0" onAction="#btnSearchBook" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e4b970; -fx-text-fill: rgb(37, 75, 75); -fx-font-family: 'Arial'; -fx-font-weight: normal;" text="Search Book" />
   
       <!-- BORROW EXTENSION BUTTON -->
       <Button fx:id="btnExtendBorrow" layoutX="147.0" layoutY="303.0" onAction="#btnExtendBorrow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e4b970; -fx-text-fill: rgb(37, 75, 75); -fx-font-family: 'Arial'; -fx-font-weight: normal;" text="Borrow Extension" />
   
       <!-- ORDER BOOK BUTTON -->
       <Button fx:id="btnOrderBook" layoutX="147.0" layoutY="363.0" onAction="#btnOrderBook" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e4b970; -fx-text-fill: rgb(37, 75, 75); -fx-font-family: 'Arial'; -fx-font-weight: normal;" text="Order Book" />
         <Button fx:id="handleBack" layoutX="26.0" layoutY="14.0" onAction="#goBack" style="-fx-font-size: 36px; -fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-border-width: 0;" text="←" />
      <Button fx:id="btnAccountStatus" layoutX="147.0" layoutY="421.0" onAction="#viewAccountStatus" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e4b970; -fx-text-fill: rgb(37, 75, 75); -fx-font-family: 'Arial'; -fx-font-weight: normal;" text="Account Status History" />
   </children>
</AnchorPane>
