<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>  <!-- Add this import for HBox -->
<?import javafx.scene.paint.Color?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="gui.BookReturnCompletedController" 
      prefHeight="400.0" prefWidth="600.0" spacing="20" alignment="CENTER" style="-fx-background-color: #3b4f4f; -fx-padding: 20;">

       <!-- LOGO IMAGE -->
    <ImageView fx:id="logo" fitWidth="200" preserveRatio="true" style="-fx-background-color: lightgray;">
        <Image url="@/gui/images/BLIB.png"/>
    </ImageView>

   <!-- Confirmation Message -->
   <Label text="The book was returned." textFill="white" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-alignment: center;" />

   <!-- Buttons Section -->
   <HBox spacing="20" alignment="CENTER" style="-fx-padding-top: 30;">
      <!-- Return Another Book Button -->
      <Button fx:id="btnBookReturn" onAction="#btnReturnBook" text="Return another book" 
              style="-fx-background-color: #b59b53; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200px; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 10 20;" 
              onMouseEntered="#onMouseEnteredButton" onMouseExited="#onMouseExitedButton" />
      
      <!-- Return to Main Menu Button -->
      <Button fx:id="btnBack" onAction="#handleBack" text="Return to main menu" 
              style="-fx-background-color: #b59b53; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200px; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 10 20;" 
              onMouseEntered="#onMouseEnteredButton" onMouseExited="#onMouseExitedButton" />
   </HBox>
</VBox>

